<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :entry %><br />
    <%= f.text_area :entry %>
  </p>
  <p>
    <%= f.label :volunteer_id %><br />
    <%= f.text_field :volunteer_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>