<h1>Listing schedules</h1>

<table>
  <tr>
  <th>Id</th>
    <th>Title</th>
     <th>Domain</th>
    <th>Year</th>
    <th>Status</th>
    <th>Description</th>
    <th>Start</th>
    <th>End</th>
    <th>Shiftlength</th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
  <td><%=h schedule.id %></td>
    <td><%=h schedule.title %></td>
      <td><%=h schedule.area.name %></td>
     <td><%=h schedule.year %></td>
    <td><%=h status(schedule.status) %></td>
    <td><%=h truncate(schedule.description) %></td>
    <td><%=h schedule.start.strftime("%a, %B %d, %Y") %></td>
    <td><%=h schedule.end.strftime("%a, %B %d, %Y") %></td>
    <td><%=h schedule.shiftlength %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Duplicate', url_for(:action=>'duplicate', :id=>schedule.id)%></td>
      <% if schedule.status!=2 %>  <td><%= link_to 'Assign Shifts', url_for(:action=> 'assign', :id=>schedule.id)%></td><% end %>
    <% if schedule.status==0 %>    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td> <% end %>
  </tr>
<% end %>
</table>

<br />

