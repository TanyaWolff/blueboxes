<h1>Listing shifts</h1>

<table>
  <tr>
<th>Id</th>

    <th>Start</th>
    <th>Location</th>
 <th>Volunteer</th>
<th>Schedule</th>


  </tr>

<% @shifts.each do |shift| %>
  <tr>
<td><%=h shift.id %>
    <td><%=h shift.start.strftime("%a %b %d %I%p") if shift.start %></td>
    <td><%=h shift.location.name if shift.location%></td>
 <td><%=h shift.volunteer.name if shift.volunteer%></td>
<td><%=h shift.schedule.title if shift.schedule%></td>


    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New shift', new_shift_path %>