<h1>Listing areas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @areas.each do |area| %>
  <tr>
    <td><%=h area.name %></td>
    <td><%=h truncate(area.description) %></td>
    <td><%= link_to 'Show', area %></td>
    <td><%= link_to 'Edit', edit_area_path(area) %></td>
    <td><%= button_to 'Destroy', area, :confirm => 'Are you sure?', 'method' => :delete, :onclick => "return confirm('Are you sure?')" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New area', new_area_path %>
