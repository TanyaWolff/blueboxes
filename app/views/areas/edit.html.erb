<h1>Editing area</h1>

<%= form_for(@area) do |f| %>

 <% @area.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @area %> |
<%= link_to 'Back', areas_path %>
