<h1>New comment by <%= @volunteer.name %></h1>

<%= form_for(@comment) do |f| %>
 <% @comment.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>

  <p>
     <%= f.hidden_field 'volunteer_id' %><br/>
     <%= f.text_area :entry, :rows => 5%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

